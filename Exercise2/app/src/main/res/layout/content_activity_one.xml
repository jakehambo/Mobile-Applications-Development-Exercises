<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id98099815.mad.exercise2.ActivityOne"
    tools:showIn="@layout/activity_one">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/R1">

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/activity_one_androidvsapple"
        android:src="@drawable/androidvsapple"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise 2 Going MAD!"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignTop="@+id/activity_one_androidvsapple"
        android:layout_toRightOf="@+id/activity_one_androidvsapple"
        android:layout_toEndOf="@+id/activity_one_androidvsapple"
        android:id="@+id/activity_one_titleTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playing with nested layouts!"
        android:textStyle="italic"
        android:textSize="10dp"
        android:layout_toRightOf="@+id/activity_one_androidvsapple"
        android:layout_toEndOf="@+id/activity_one_androidvsapple"
        android:layout_below="@+id/activity_one_titleTextView"
        android:id="@+id/activity_one_subtitleTextView" />



    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_one_name_editText"
            android:hint="Your name"
            android:inputType="textCapSentences"
            android:layout_alignParentTop="true"
            android:layout_marginTop="79dp" />

        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_one_email_editText"
            android:hint="Your email"
            android:inputType="textCapSentences"
            android:layout_below="@+id/activity_one_name_editText"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_one_number_editText"
            android:hint="Your phone"
            android:inputType="number"
            android:layout_below="@+id/activity_one_email_editText"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_one_phonetype_spinner"
            android:layout_alignTop="@+id/activity_one_number_editText"
            android:layout_toRightOf="@+id/activity_one_number_editText"
            android:layout_toEndOf="@+id/activity_one_number_editText" />

    </RelativeLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/activity_one_submit_button"
            android:layout_alignParentBottom="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear All"
            android:id="@+id/activity_one_clear_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:id="@+id/activity_one_exit_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
             />

        </RelativeLayout>

</RelativeLayout>
