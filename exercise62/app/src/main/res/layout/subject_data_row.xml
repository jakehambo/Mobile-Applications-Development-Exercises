<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/list_activity_image_linear_layout"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:src="@drawable/book" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/list_activity_image_linear_layout"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_activity_subject_name_text_view"
            android:textSize="10pt"
            android:textStyle="bold"
            android:gravity="top|center"
            android:layout_gravity="top|center" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/list_activity_image_linear_layout"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:gravity="bottom">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_activity_subject_number_text_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/list_activity_subject_type_text_view"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_activity_subject_date_text_view"
        android:layout_marginLeft="10dp" />
    </LinearLayout>
</RelativeLayout>